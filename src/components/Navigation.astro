---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<style>
  div {
    display: flex;
    gap: 8px;
  }

  a {
    display: flex;
    align-items: center;
    color: rgb(18, 18, 18);
    position: relative;
    text-decoration: none;

    &::before {
      content: "";
      position: absolute;
      display: block;
      width: 100%;
      height: 1px;
      bottom: 8px;
      left: 0;
      background-color: #000;
      transform: scaleX(0);
      transform-origin: top left;
      transition: transform 0.15s cubic-bezier(0.04, 0.92, 0.1, 0.79);
    }

    &:hover::before {
      transform: scaleX(1);
    }

    &.active {
      font-weight: 400;

      &::before {
        transform: scaleX(1);
      }
    }
  }
</style>

<div class="nav-links">
  <a href="/" class={currentPath === "" ? "active" : ""}> Home</a>
  <a href="/about" class={currentPath.startsWith("about") ? "active" : ""}>
    About
  </a>
  <a href="/blog" class={currentPath.startsWith("blog") ? "active" : ""}>
    Blog
  </a>
  <a href="/tags" class={currentPath.startsWith("tags") ? "active" : ""}>
    Tags
  </a>
</div>
