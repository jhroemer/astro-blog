---
interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    image: {
      url: string;
      alt: string;
    };
  };
}
const { frontmatter } = Astro.props;
---

<h1>{frontmatter.title}</h1>
<p>Published on: {frontmatter.pubDate.slice(0, 10)}</p>
<p>{frontmatter.description}</p>
<img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
<slot />
